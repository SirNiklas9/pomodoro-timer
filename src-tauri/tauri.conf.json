{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Banandoro",
  "version": "1.1.0",
  "identifier": "cloud.bananalabs.banandoro",
  "build": {
    "frontendDist": "https://bananadoro.bananalabs.cloud",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Bananadoro Timer",
        "devtools": false,
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "nsis": {
        "installerIcon": "icons/favicon.ico"
      }
    },
    "icon": [
      "icons/favicon.ico",
      "icons/favicon-32x32.png",
      "icons/BananadoroLogo.png",
      "icons/android-chrome-192x192.png",
      "icons/android-chrome-512x512.png"
    ]
  }
}
